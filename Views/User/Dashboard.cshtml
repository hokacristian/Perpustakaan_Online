@{
    ViewData["Title"] = "Dashboard User";
    var currentBorrowing = ViewBag.CurrentBorrowing as Perpustakaan_Online.Models.BorrowingTransaction;
    var userName = ViewBag.UserName as string;
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="bi bi-speedometer2 me-2 text-primary"></i>
                Dashboard - Selamat datang, @userName!
            </h2>
            <p class="text-muted">Kelola aktivitas peminjaman buku Anda di sini.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-book-fill display-4 text-primary mb-3"></i>
                    <h5>Jelajahi Buku</h5>
                    <p class="text-muted">Temukan buku favorit Anda</p>
                    <a asp-action="Books" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Lihat Katalog
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history display-4 text-info mb-3"></i>
                    <h5>Riwayat Peminjaman</h5>
                    <p class="text-muted">Lihat semua aktivitas peminjaman</p>
                    <a asp-action="BorrowHistory" class="btn btn-info">
                        <i class="bi bi-list-ul me-1"></i>Lihat Riwayat
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-question-circle-fill display-4 text-secondary mb-3"></i>
                    <h5>Bantuan</h5>
                    <p class="text-muted">Pelajari cara menggunakan sistem</p>
                    <a asp-controller="Home" asp-action="About" class="btn btn-secondary">
                        <i class="bi bi-info-circle me-1"></i>Pelajari
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-bookmark-fill text-warning me-2"></i>
                        Status Peminjaman Aktif
                    </h5>
                </div>
                <div class="card-body">
                    @if (currentBorrowing != null)
                    {
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <i class="bi bi-info-circle-fill flex-shrink-0 me-3 fs-4"></i>
                            <div>
                                <h6 class="alert-heading">Anda sedang meminjam buku:</h6>
                                <strong>@currentBorrowing.Book.Title</strong> oleh @currentBorrowing.Book.Author
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <h6 class="fw-bold text-primary">Detail Peminjaman</h6>
                                    <table class="table table-sm table-borderless mb-0">
                                        <tr>
                                            <td><i class="bi bi-calendar-date me-1"></i><strong>Tanggal Pinjam:</strong></td>
                                            <td>@currentBorrowing.BorrowDate.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td><i class="bi bi-calendar-x me-1"></i><strong>Jatuh Tempo:</strong></td>
                                            <td>
                                                @currentBorrowing.DueDate.ToString("dd/MM/yyyy")
                                                @if (currentBorrowing.IsOverdue)
                                                {
                                                    <span class="badge bg-danger ms-2">Terlambat @currentBorrowing.DaysOverdue hari</span>
                                                }
                                                else
                                                {
                                                    var daysLeft = (currentBorrowing.DueDate - DateTime.UtcNow).Days;
                                                    <span class="badge bg-success ms-2">@daysLeft hari lagi</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><i class="bi bi-info-circle me-1"></i><strong>Status:</strong></td>
                                            <td>
                                                @if (currentBorrowing.IsOverdue)
                                                {
                                                    <span class="badge bg-danger">Terlambat</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Dipinjam</span>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-6 mt-3 mt-md-0">
                                <div class="border rounded p-3">
                                    <h6 class="fw-bold text-success">Aksi</h6>
                                    <p class="text-muted small mb-3">
                                        Kembalikan buku jika sudah selesai membaca
                                    </p>
                                    <form asp-action="ReturnBook" method="post" class="d-inline" id="returnForm_@currentBorrowing.Id">
                                        <input type="hidden" name="transactionId" value="@currentBorrowing.Id" />
                                        <button type="button" class="btn btn-success"
                                                onclick="confirmAction('Kembalikan Buku', 'Apakah Anda yakin ingin mengembalikan buku @currentBorrowing.Book.Title?', 'Ya, Kembalikan', 'Batal').then((result) => { if (result.isConfirmed) document.getElementById('returnForm_@currentBorrowing.Id').submit(); })">
                                            <i class="bi bi-check-circle-fill me-1"></i>Kembalikan Buku
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-book display-1 text-muted mb-3"></i>
                            <h5 class="text-muted">Tidak ada buku yang sedang dipinjam</h5>
                            <p class="text-muted">Jelajahi katalog buku dan mulai membaca hari ini!</p>
                            <a asp-action="Books" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Cari Buku
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (currentBorrowing != null && currentBorrowing.IsOverdue)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Perhatian!
                    </h6>
                    <p class="mb-0">
                        Buku Anda sudah melewati batas waktu pengembalian selama <strong>@currentBorrowing.DaysOverdue hari</strong>.
                        Mohon segera kembalikan untuk menghindari sanksi.
                    </p>
                </div>
            </div>
        </div>
    }
</div>