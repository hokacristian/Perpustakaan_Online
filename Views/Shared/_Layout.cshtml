<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Perpustakaan Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Perpustakaan_Online.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-fill me-2"></i>Perpustakaan Online
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-fill me-1"></i>Beranda
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            @if (Context.Session.GetString("UserRole") == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear-fill me-1"></i>Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Books">Kelola Buku</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Categories">Kelola Kategori</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="BorrowingTransactions">Peminjaman</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">Pengguna</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="Books">
                                        <i class="bi bi-book me-1"></i>Katalog Buku
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="BorrowHistory">
                                        <i class="bi bi-clock-history me-1"></i>Riwayat
                                    </a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle-fill me-1"></i>Tentang
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="button" class="dropdown-item" onclick="confirmLogout()">
                                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill me-1"></i>Daftar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">

        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-book-fill me-2"></i>Perpustakaan Online</h5>
                    <p class="text-muted mb-0">Sistem manajemen perpustakaan digital yang mudah dan efisien.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">&copy; 2025 - Perpustakaan Online. All rights reserved.</p>
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SweetAlert Notifications -->
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Berhasil!',
                text: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Gagal!',
                text: '@TempData["ErrorMessage"]',
                showConfirmButton: true
            });
        </script>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'info',
                title: 'Informasi',
                text: '@TempData["InfoMessage"]',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        </script>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'warning',
                title: 'Peringatan!',
                text: '@TempData["WarningMessage"]',
                showConfirmButton: true
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
