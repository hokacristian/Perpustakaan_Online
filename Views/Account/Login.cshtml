@model Perpustakaan_Online.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope-fill me-1"></i>@Html.DisplayNameFor(model => model.Email)
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Masukkan email Anda" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="bi bi-key-fill me-1"></i>@Html.DisplayNameFor(model => model.Password)
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Masukkan password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(model => model.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Belum memiliki akun?
                                <a asp-action="Register" class="text-decoration-none fw-bold">
                                    <i class="bi bi-person-plus-fill me-1"></i>Daftar di sini
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-info-circle-fill text-info me-2"></i>Demo Account
                        </h6>
                        <p class="card-text small text-muted mb-2">
                            <strong>Admin:</strong> admin@library.com / Admin123
                        </p>
                        <p class="card-text small text-muted mb-0">
                            Atau daftar sebagai user baru
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}