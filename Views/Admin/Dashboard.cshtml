@model List<Perpustakaan_Online.Models.BorrowingTransaction>
@{
    ViewData["Title"] = "Dashboard Admin";
    var totalBooks = ViewBag.TotalBooks as int? ?? 0;
    var totalUsers = ViewBag.TotalUsers as int? ?? 0;
    var activeBorrowings = ViewBag.ActiveBorrowings as int? ?? 0;
    var overdueBooks = ViewBag.OverdueBooks as int? ?? 0;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="bi bi-speedometer2 me-2 text-primary"></i>
                Dashboard Administrator
            </h2>
            <p class="text-muted">Overview sistem perpustakaan online</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Buku</h6>
                            <h2 class="mt-2 mb-0">@totalBooks</h2>
                        </div>
                        <i class="bi bi-books display-4 opacity-75"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Books" class="text-white text-decoration-none">
                        <small>Lihat detail <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Pengguna</h6>
                            <h2 class="mt-2 mb-0">@totalUsers</h2>
                        </div>
                        <i class="bi bi-people-fill display-4 opacity-75"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Users" class="text-white text-decoration-none">
                        <small>Lihat detail <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Sedang Dipinjam</h6>
                            <h2 class="mt-2 mb-0">@activeBorrowings</h2>
                        </div>
                        <i class="bi bi-bookmark-fill display-4 opacity-75"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="BorrowingTransactions" asp-route-status="Borrowed" class="text-white text-decoration-none">
                        <small>Lihat detail <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Buku Terlambat</h6>
                            <h2 class="mt-2 mb-0">@overdueBooks</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill display-4 opacity-75"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="BorrowingTransactions" asp-route-status="Overdue" class="text-white text-decoration-none">
                        <small>Lihat detail <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Overdue Books Alert -->
    @if (overdueBooks > 0)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-3"></i>
                <div class="flex-grow-1">
                    <h5 class="alert-heading mb-1">
                        <strong>⚠️ Ada @overdueBooks Buku Terlambat!</strong>
                    </h5>
                    <p class="mb-2">
                        Terdapat @overdueBooks transaksi peminjaman yang sudah melewati batas waktu pengembalian.
                        Segera tindak lanjuti untuk menghindari kerugian lebih lanjut.
                    </p>
                    <div class="d-flex gap-2">
                        <a asp-action="BorrowingTransactions" asp-route-status="Overdue" class="btn btn-danger btn-sm">
                            <i class="bi bi-list-ul me-1"></i>Lihat Daftar Terlambat
                        </a>
                        <a asp-action="Users" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-people me-1"></i>Kelola Pengguna
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-fill text-warning me-2"></i>
                        Aksi Cepat
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-action="AddBook" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle-fill me-1"></i>
                                Tambah Buku
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="Books" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul me-1"></i>
                                Kelola Buku
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="BorrowingTransactions" class="btn btn-outline-info w-100">
                                <i class="bi bi-journal-text me-1"></i>
                                Lihat Peminjaman
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="Users" class="btn btn-outline-success w-100">
                                <i class="bi bi-people me-1"></i>
                                Kelola Pengguna
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Borrowing Transactions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history text-info me-2"></i>
                        Transaksi Peminjaman Terbaru
                    </h5>
                    <a asp-action="BorrowingTransactions" class="btn btn-sm btn-outline-primary">
                        Lihat Semua <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Pengguna</th>
                                        <th>Buku</th>
                                        <th>Tanggal Pinjam</th>
                                        <th>Jatuh Tempo</th>
                                        <th>Status</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@transaction.User.FullName</strong>
                                                    <br>
                                                    <small class="text-muted">@transaction.User.Email</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@transaction.Book.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@transaction.Book.Author</small>
                                                </div>
                                            </td>
                                            <td>@transaction.BorrowDate.ToString("dd/MM/yyyy")</td>
                                            <td>@transaction.DueDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (transaction.Status == "Borrowed")
                                                {
                                                    if (transaction.IsOverdue)
                                                    {
                                                        <span class="badge bg-danger">Terlambat @transaction.DaysOverdue hari</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">Dipinjam</span>
                                                    }
                                                }
                                                else if (transaction.Status == "Returned")
                                                {
                                                    <span class="badge bg-secondary">Dikembalikan</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@transaction.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (transaction.Status == "Borrowed" && transaction.IsOverdue)
                                                {
                                                    <form asp-action="MarkAsOverdue" method="post" class="d-inline">
                                                        <input type="hidden" name="transactionId" value="@transaction.Id" />
                                                        <button type="submit" class="btn btn-sm btn-warning"
                                                                onclick="return confirm('Tandai sebagai terlambat?')">
                                                            <i class="bi bi-exclamation-triangle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-journal-x display-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Belum ada transaksi peminjaman</h5>
                            <p class="text-muted">Transaksi akan muncul ketika pengguna mulai meminjam buku</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>