@model Perpustakaan_Online.Models.Category
@{
    ViewData["Title"] = "Tambah Kategori";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle-fill me-2"></i>
                        Tambah Kategori Baru
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddCategory" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="bi bi-tag me-1"></i>Nama Kategori
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="Contoh: Novel, Biografi, Sejarah..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-card-text me-1"></i>Deskripsi
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Masukkan deskripsi singkat tentang kategori ini..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <small class="text-muted">Deskripsi opsional untuk menjelaskan jenis buku dalam kategori ini</small>
                            </div>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle-fill me-1"></i>
                                Simpan Kategori
                            </button>
                            <a asp-action="Categories" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Kembali
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border-0 bg-light mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle-fill text-info me-2"></i>Tips
                    </h6>
                    <ul class="mb-0 small text-muted">
                        <li>Gunakan nama kategori yang jelas dan mudah dipahami</li>
                        <li>Hindari duplikasi nama kategori yang sudah ada</li>
                        <li>Deskripsi membantu pengguna memahami jenis buku dalam kategori</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}