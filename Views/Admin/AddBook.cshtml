@model Perpustakaan_Online.Models.Book
@{
    ViewData["Title"] = "Tambah Buku";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle-fill me-2"></i>
                        Tambah Buku Baru
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddBook" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">
                                    <i class="bi bi-book me-1"></i>Judul Buku
                                </label>
                                <input asp-for="Title" class="form-control" placeholder="Masukkan judul buku" required />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author" class="form-label fw-bold">
                                    <i class="bi bi-person me-1"></i>Penulis
                                </label>
                                <input asp-for="Author" class="form-control" placeholder="Masukkan nama penulis" required />
                                <span asp-validation-for="Author" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold">
                                    <i class="bi bi-tag me-1"></i>Kategori
                                </label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="0">Pilih kategori</option>
                                    @if (ViewBag.Categories is List<Perpustakaan_Online.Models.Category> categories && categories.Any())
                                    {
                                        foreach (var category in categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="0" disabled>Tidak ada kategori tersedia</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Informasi Kategori
                                </label>
                                <div class="d-grid">
                                    <a asp-action="Categories" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-gear me-1"></i>Kelola Kategori
                                    </a>
                                </div>
                                <small class="text-muted mt-1 d-block">
                                    @if (ViewBag.Categories is List<Perpustakaan_Online.Models.Category> categories)
                                    {
                                        <text>@categories.Count kategori tersedia</text>
                                    }
                                    else
                                    {
                                        <text>Loading...</text>
                                    }
                                </small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalCopies" class="form-label fw-bold">
                                    <i class="bi bi-stack me-1"></i>Total Eksemplar
                                </label>
                                <input asp-for="TotalCopies" type="number" min="1" class="form-control" placeholder="1" required />
                                <span asp-validation-for="TotalCopies" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Eksemplar Tersedia
                                </label>
                                <input type="text" class="form-control" value="Otomatis sama dengan Total Eksemplar" readonly />
                                <small class="text-muted">Akan diset otomatis sama dengan total eksemplar</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-card-text me-1"></i>Deskripsi
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Masukkan deskripsi singkat tentang buku ini..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle-fill me-1"></i>
                                Simpan Buku
                            </button>
                            <a asp-action="Books" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Kembali
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Debug: Check categories loaded
            var categoryOptions = $('select[name="CategoryId"] option').length;
            console.log('Number of category options loaded:', categoryOptions);

            $('select[name="CategoryId"] option').each(function() {
                console.log('Category option:', $(this).val(), $(this).text());
            });

            $('form').on('submit', function(e) {
                console.log('Form is being submitted');

                // Check if all required fields are filled
                var title = $('input[name="Title"]').val();
                var author = $('input[name="Author"]').val();
                var categoryId = $('select[name="CategoryId"]').val();
                var totalCopies = $('input[name="TotalCopies"]').val();

                console.log('Title:', title);
                console.log('Author:', author);
                console.log('CategoryId:', categoryId);
                console.log('TotalCopies:', totalCopies);

                if (!title || !author || !categoryId || !totalCopies) {
                    e.preventDefault();
                    if (!categoryId) {
                        alert('Kategori harus dipilih! Pastikan ada kategori yang tersedia.');
                    } else {
                        alert('Semua field wajib harus diisi!');
                    }
                    return false;
                }

                // Show loading state
                $('#submitBtn').prop('disabled', true).html('<i class="bi bi-hourglass-split me-1"></i>Menyimpan...');
            });
        });
    </script>
}