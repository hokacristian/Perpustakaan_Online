@model Perpustakaan_Online.Models.Book
@{
    ViewData["Title"] = "Edit Buku";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Buku
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditBook" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">
                                    <i class="bi bi-book me-1"></i>Judul Buku
                                </label>
                                <input asp-for="Title" class="form-control" placeholder="Masukkan judul buku" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author" class="form-label fw-bold">
                                    <i class="bi bi-person me-1"></i>Penulis
                                </label>
                                <input asp-for="Author" class="form-control" placeholder="Masukkan nama penulis" />
                                <span asp-validation-for="Author" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold">
                                    <i class="bi bi-tag me-1"></i>Kategori
                                </label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Pilih kategori</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        @foreach (var category in ViewBag.Categories as List<Perpustakaan_Online.Models.Category> ?? new List<Perpustakaan_Online.Models.Category>())
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalCopies" class="form-label fw-bold">
                                    <i class="bi bi-stack me-1"></i>Total Eksemplar
                                </label>
                                <input asp-for="TotalCopies" type="number" min="1" class="form-control" />
                                <span asp-validation-for="TotalCopies" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableCopies" class="form-label fw-bold">
                                    <i class="bi bi-check-circle me-1"></i>Eksemplar Tersedia
                                </label>
                                <input asp-for="AvailableCopies" type="number" min="0" class="form-control" />
                                <span asp-validation-for="AvailableCopies" class="text-danger small"></span>
                                <small class="text-muted">Pastikan tidak lebih dari total eksemplar</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Status
                                </label>
                                <input type="text" class="form-control" value="@(Model.AvailableCopies > 0 ? "Tersedia" : "Tidak Tersedia")" readonly />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-card-text me-1"></i>Deskripsi
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Masukkan deskripsi singkat tentang buku ini..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle-fill me-1"></i>
                                Update Buku
                            </button>
                            <a asp-action="Books" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Kembali
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}